<!DOCTYPE html>
<html>
<head>
    <title>Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .modal-body { max-height: 60vh; overflow-y: auto; }
        /* Memastikan SweetAlert terlihat jelas di atas elemen lain */
        .swal2-container { z-index: 20000 !important; }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid p-0 bg-white shadow-sm sticky-top">
        <div class="d-flex align-items-center p-3">
            <a href="/" class="btn btn-light me-3 border">‚Üê</a>
            <h5 class="fw-bold m-0">‚öôÔ∏è Pengaturan</h5>
        </div>
    </div>

    <div class="container mt-3 pb-5">
        
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <h6 class="fw-bold text-primary mb-3">KONFIGURASI GRUP WA</h6>
                <div class="input-group">
                    <span class="input-group-text bg-light">ID</span>
                    <input type="text" class="form-control fw-bold" value="<%= groupName %>" readonly>
                </div>
                <div class="alert alert-info small border-0 bg-info-subtle text-info-emphasis mt-2 mb-0 py-2">
                    ‚ÑπÔ∏è Ketik <code>!setlog</code> di grup WA untuk mengubah.
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body p-3">
                <h6 class="fw-bold text-dark mb-2">DATABASE AKUN EKSEKUTOR</h6>
                <p class="text-muted small mb-3">Tambah, edit, atau hapus akun penimbun.</p>
                
                <button class="btn btn-primary w-100 py-3 fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#accountModal">
                    üìÇ KELOLA DATA AKUN (<%= accounts.length %>)
                </button>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="fw-bold m-0 text-success">DAFTAR PRODUK / LAYANAN</h6>
                <button class="btn btn-sm btn-success fw-bold" onclick="addProduct()">+ Tambah</button>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light small">
                        <tr>
                            <th class="ps-3">Nama Produk</th>
                            <th>Harga</th>
                            <th class="text-end pe-3">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(p => { %>
                        <tr>
                            <td class="ps-3 fw-bold"><%= p.name %></td>
                            <td><span class="badge bg-secondary"><%= p.price %></span></td>
                            <td class="text-end pe-3">
                                <button onclick="editProduct('<%= p.id %>', '<%= p.name %>', <%= p.price %>)" class="btn btn-sm btn-outline-primary">‚úé</button>
                                <form action="/api/save-product" method="POST" class="d-inline" onsubmit="return confirm('Hapus produk ini?')">
                                    <input type="hidden" name="id" value="<%= p.id %>">
                                    <input type="hidden" name="action" value="delete">
                                    <button class="btn btn-sm btn-outline-danger">üóëÔ∏è</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="accountModal">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold">Manajemen Akun</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-0">
                    <table class="table table-striped mb-0 align-middle">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th class="ps-3">Akun (Nick / ID)</th>
                                <th class="text-end pe-3">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% accounts.forEach(acc => { %>
                            <tr>
                                <td class="ps-3">
                                    <span class="fw-bold d-block text-dark"><%= acc.nick %></span>
                                    <small class="text-muted font-monospace"><%= acc.id %></small>
                                </td>
                                <td class="text-end pe-3">
                                    <button onclick="editAccount('<%= acc.nick %>', '<%= acc.id %>')" class="btn btn-sm btn-outline-primary fw-bold">EDIT</button>
                                    <form action="/api/save-account" method="POST" class="d-inline" onsubmit="return confirm('Yakin hapus akun <%= acc.nick %>? Stok akan hilang!')">
                                        <input type="hidden" name="nick" value="<%= acc.nick %>">
                                        <input type="hidden" name="action" value="delete">
                                        <button class="btn btn-sm btn-outline-danger fw-bold">X</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success w-100 fw-bold" onclick="addAccount()">+ TAMBAH AKUN BARU</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // --- FUNGSI PRODUK ---
        function addProduct() {
            Swal.fire({
                title: 'Tambah Produk',
                html: `<input id="swal-name" class="form-control mb-2" placeholder="Nama Item"><input id="swal-price" type="number" class="form-control" placeholder="Harga (DM)">`,
                showCancelButton: true, confirmButtonText: 'Simpan',
                preConfirm: () => ({ name: document.getElementById('swal-name').value, price: document.getElementById('swal-price').value })
            }).then((res) => {
                if (res.isConfirmed && res.value.name) postProduct('add', null, res.value.name, res.value.price);
            });
        }
        function editProduct(id, name, price) {
            Swal.fire({
                title: 'Edit Produk',
                html: `<input id="swal-name" class="form-control mb-2" value="${name}"><input id="swal-price" type="number" class="form-control" value="${price}">`,
                showCancelButton: true, confirmButtonText: 'Update',
                preConfirm: () => ({ name: document.getElementById('swal-name').value, price: document.getElementById('swal-price').value })
            }).then((res) => {
                if (res.isConfirmed) postProduct('edit', id, res.value.name, res.value.price);
            });
        }
        function postProduct(action, id, name, price) {
            const form = document.createElement('form'); form.method = 'POST'; form.action = '/api/save-product';
            form.innerHTML = `<input type="hidden" name="action" value="${action}"><input type="hidden" name="id" value="${id}"><input type="hidden" name="name" value="${name}"><input type="hidden" name="price" value="${price}">`;
            document.body.appendChild(form); form.submit();
        }

        // --- FUNGSI AKUN (FIXED INPUT FOCUS) ---
        function addAccount() {
            Swal.fire({
                title: 'Tambah Akun Baru',
                // FIX UTAMA: Targetkan elemen modal agar Swal muncul "di dalam" modal
                target: document.getElementById('accountModal'),
                html: `
                    <input id="add-nick" class="form-control mb-2 fw-bold" placeholder="Nickname (mis: tacer1)">
                    <input id="add-id" class="form-control font-monospace" placeholder="ID Game (mis: 123456(1234))">
                `,
                showCancelButton: true, confirmButtonText: 'TAMBAH',
                preConfirm: () => ({ nick: document.getElementById('add-nick').value, id: document.getElementById('add-id').value })
            }).then((res) => {
                if (res.isConfirmed && res.value.nick) postAccount('add', null, res.value.nick, res.value.id);
            });
        }

        function editAccount(oldNick, oldId) {
            Swal.fire({
                title: `Edit ${oldNick}`,
                // FIX UTAMA: Targetkan elemen modal
                target: document.getElementById('accountModal'),
                html: `
                    <label class="small text-muted">Nickname</label>
                    <input id="edit-nick" class="form-control mb-2 fw-bold" value="${oldNick}">
                    <label class="small text-muted">ID Game</label>
                    <input id="edit-id" class="form-control font-monospace" value="${oldId}">
                `,
                showCancelButton: true, confirmButtonText: 'SIMPAN',
                preConfirm: () => ({ nick: document.getElementById('edit-nick').value, id: document.getElementById('edit-id').value })
            }).then((res) => {
                if (res.isConfirmed) postAccount('edit', oldNick, res.value.nick, res.value.id);
            });
        }

        function postAccount(action, oldNick, nick, id) {
            const form = document.createElement('form'); form.method = 'POST'; form.action = '/api/save-account';
            form.innerHTML = `
                <input type="hidden" name="action" value="${action}">
                <input type="hidden" name="oldNick" value="${oldNick}">
                <input type="hidden" name="nick" value="${nick}">
                <input type="hidden" name="id" value="${id}">
            `;
            document.body.appendChild(form); form.submit();
        }
    </script>
</body>
</html>
